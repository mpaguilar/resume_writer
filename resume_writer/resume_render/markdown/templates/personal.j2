<div id='personal'>
    <h1>Personal</h1>
{% if settings.contact_info and personal.contact_info %}
<h2>Contact Info</h2>
<div id='contact_info'>

{% if settings.name and personal.contact_info.name %}
<div class='contact_info_name'>
    {{ personal.contact_info.name }}
</div>
{% endif %} <!-- name -->

{% if settings.email and personal.contact_info.email %}
<div class='contact_info_email'>
    Email: <a href='mailto:{{ personal.contact_info.email }}'>{{ personal.contact_info.email }}</a>
</div>
{% endif %} <!-- email -->

{% if settings.phone and personal.contact_info.phone %}
<div class='contact_info_phone'>
    Phone: {{ personal.contact_info.phone }}
</div>
{% endif %} <!-- phone -->

{% if settings.location and personal.contact_info.location %}
<div class='contact_info_location'>
    Location: {{ personal.contact_info.location }}
</div>
{% endif %} <!-- location -->
</div>
{% endif %} <!--- contact_info -->

<h2>Banner and note</h2>
{% if settings.banner and personal.banner.text %}
<div class="banner">
    {{ personal.banner.text }}
</div>
{% endif %} <!-- banner -->

{% if settings.note and personal.note.text %}
<div class="note">
    {{ personal.note.text }}
</div>
{% endif %} <!-- note -->

{% if settings.websites and personal.websites %}
<div class="websites">
<h2>Websites</h2>
{% if settings.github and personal.websites.github %}
<div class='website'>
    <a href='{{ personal.websites.github }}'>GitHub</a>
{% endif %} <!--- github -->
</div>

{% if settings.linkedin and personal.websites.linkedin %}
<div class='linkedin'>
    <a href='{{ personal.websites.linkedin }}'>LinkedIn</a>
</div>
{% endif %} <!--- linkedin -->

{% if settings.website and personal.websites.website %}
<div class='website'>
    <a href='{{ personal.websites.website }}'>Website</a>
</div>
{% endif %} <!--- website -->

{% if settings.twitter and personal.websites.twitter %}
<div class='twitter'>
    <a href='{{ personal.websites.twitter }}'>Twitter</a>
</div>
{% endif %} <!--- twitter -->
</div>
{% endif %} <!--- websites -->

{% if settings.visa_status and personal.visa_status %}
<div class='visa_status'>
<h2>Visa Status</h2>
{% if settings.work_authorization and personal.visa_status.work_authorization %}
<div class='work_authorization'>
    Work Authorization: {{ personal.visa_status.work_authorization }}
</div>
{% endif %} <!--- work_authorization -->

{% if settings.require_sponsorship and personal.visa_status.require_sponsorship != None %}
<div class='require_sponsorship'>
    Require Sponsorship: 
    {% if personal.visa_status.require_sponsorship %} 
    Yes 
    {% else %}
    No
    {% endif %} <!--- require_sponsorship -->
</div>
{% endif %} <!--- require_sponsorship -->
</div>
{% endif %} <!--- visa_status -->

</div><!--- personal -->